doctype html
html
	head
		title=Index
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
		link(href="./index.css" rel="stylesheet")
	body
		div.row
			div.col.menu
				form.menu-header.d-flex.gap-3
					input.form-control(type='search' placeholder='Search')
					button.btn.btn-outline-success(type='submit') Search
				div.menu-body.d-flex.flex-column.gap-3
					div.category
						div.header
							h4.mb-1 Pizza
							hr.mt-0
						div.items.d-flex.flex-column.gap-3
							div.card.menu-item
								div.card-body.clearfix
									h5.card-title Pepperoni
									h6.card-subtitle.mb-2.text-body-secondary Tomato, Cheese, Pepperoni, Basil
									p.card-text.mb-0 The classic Pepperoni pizza, with Alfredo's homemade tomato sauce.
									button.btn.btn-primary.float-end Add
			div.col.order.d-flex.flex-column
				div.user-details
					div.slide-check.form-control.d-flex.bg-primary.p-0.border-dark
						input#check-delivery.btn-check(type='radio' name='radio-delivery')
						label.flex-fill.btn.btn-primary(for='check-delivery' style='--bs-btn-border-width: 0px; --bs-btn-active-color: black; --bs-btn-active-bg: white;') Delivery
						input#check-collection.btn-check(type='radio' name='radio-delivery')
						label.flex-fill.btn.btn-primary(for='check-collection' style='--bs-btn-border-width: 0px; --bs-btn-active-color: black; --bs-btn-active-bg: white;') Collection
								
	script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")